{
    "name": "empiriq/demo",
    "license": "MIT",
    "type": "project",
    "description": "Empiriq Demo Application",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.4",
        "empiriq/empiriq": "1.0.x-dev"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.10",
        "vimeo/psalm": "^6.13",
        "phpunit/phpunit": "^10"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "symfony/runtime": true
        }
    },
    "scripts": {
        "phpcs": "vendor/bin/phpcs --standard=PSR12 src",
        "psalm": "vendor/bin/psalm --show-info=true",
        "phpunit": "vendor/bin/phpunit"
    }
}
